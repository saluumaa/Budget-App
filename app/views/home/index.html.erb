  <br>
  <div class="container orange">
    <header>
      <h1>Welcome to Budget App</h1>
      <p>By Salma</p>
    </header>
    
    <div class="row">
      <div class="col-md-8 mb-4">
        <div class="card">
          <div class="card-body">
            <div class="row">
              <div class="col-md-4">
                <h3 class="card-title">New User</h3>
                <p>If you are a new user, please sign up:</p>
                <%= link_to 'Sign Up', new_user_registration_path, class: 'btn btn-primary' %>
              </div>
              <div class="col-md-4">
                <h3 class="card-title">Existing User</h3>
                <p>If you are an existing user, please sign in:</p>
                <%= link_to 'Sign In', new_user_session_path, class: 'btn btn-primary' %>
              </div>
              <div class="col-md-4">
                <h3 class="card-title">Sign Out</h3>
                <%= link_to 'Sign Out', destroy_user_session_path, data: { turbo_method: :delete }, class: 'btn btn-danger' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>